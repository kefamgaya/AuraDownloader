<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    <!-- Thick Gradient Ring with 50dp thickness -->
    <group>
        <!-- Outer circle with sweep gradient (blue to purple) -->
        <!-- Outer radius: 54dp (edge of viewport), Inner radius: 4dp (54 - 50 = 4dp) -->
        <path
            android:pathData="M54,54m-54,0a54,54 0,1 1,108 0a54,54 0,1 1,-108 0">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:type="sweep"
                    android:centerX="54"
                    android:centerY="54"
                    android:startColor="#6366F1"
                    android:centerColor="#8B5CF6"
                    android:endColor="#A855F7" />
            </aapt:attr>
        </path>
        <!-- Inner circle cutout - creates thick ring effect (50dp thickness) -->
        <path
            android:fillColor="#14121d"
            android:pathData="M54,54m-4,0a4,4 0,1 1,8 0a4,4 0,1 1,-8 0" />
    </group>
</vector>
